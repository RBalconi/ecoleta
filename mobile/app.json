{
  "expo": {
    "name": "Ecoleta",
    "slug": "mobile",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#F0F0F5"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.rbalconi.ecoleta",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#f0f0f5",
        "foregroundImage": "./assets/icon-fg.png"
      }
    }
  }
}
